{
    "name": "atomicseats",
    "version": "1.0.0",
    "description": "A fault-tolerant, high-concurrency ticket booking system built with Node.Js, Redis, Kafka, and PostgreSQL. Ensures atomic seat reservations, prevents overselling with distributed locks, supports event-driven workflows, and keeps Redis + DB in sync through idempotent operations and reconciliation.",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate"
    },
    "keywords": [
        "ticket-booking",
        "nodejs",
        "postgresql",
        "express"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "drizzle-orm": "^0.44.5",
        "express": "^5.1.0",
        "express-session": "^1.18.2",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.1",
        "node-cron": "^4.2.1",
        "pg": "^8.16.3",
        "redis": "^5.8.2"
    },
    "devDependencies": {
        "@types/pg": "^8.15.5",
        "drizzle-kit": "^0.31.4",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2"
    }
}
